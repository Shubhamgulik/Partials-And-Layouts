
<li id="comment-<%=comment._id%>">                      
    <p>
        <% if(locals.user && (locals.user.id == comment.user.id)){  %>
            <small><a class="delete-comment-button" href="/comments/destroy/<%= comment._id %>">X</a></small> 
        <% } %>
        <%= comment.content %> <br>
        <small>
        <% if(locals.user) {%>
        <a class="toggle-like-button" href="/likes/toggle/?id=<%= comment._id%>&type=Comment" data-likes="<%= comment.likes.length %>" ><%= comment.likes.length %> Likes </a>
        <% } else {%>
            <span><%= post.likes.length %> Likes </span>
        <%}%>
    </small>
        <br>
        <small>
            Posted by :<%= comment.user.name %>
        </small>
    </p>
</li>
